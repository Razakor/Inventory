<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/nav_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Name"
            android:textSize="40sp"
    />

    <TextView
            android:id="@+id/nav_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toEndOf="@+id/nav_name"
            android:layout_alignParentEnd="true"
            android:text="LVL"
            android:gravity="end"
            android:textSize="40sp"
    />

    <TextView
            android:id="@+id/nav_race"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/nav_name"
            android:layout_alignParentStart="true"
            android:text="Race"
            android:textSize="30sp"
    />

    <TextView
            android:id="@+id/nav_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/nav_name"
            android:layout_alignParentEnd="true"
            android:text="Class"
            android:textSize="30sp"
    />

    <TextView
            android:id="@+id/nav_xp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_below="@+id/nav_race"
            android:layout_alignParentEnd="true"
            android:text="Xp"
            android:textSize="20sp"
    />

    <include
            layout="@layout/money"
            android:layout_below="@+id/nav_xp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <TextView
            android:id="@+id/nav_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_below="@+id/money"
            android:layout_alignParentEnd="true"
            android:text="Description"
            android:textSize="25sp"
    />

</RelativeLayout>